
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to vaults for any authenticated user.
    // In a real production app, you would lock this down further based on roles/tiers.
    match /vaults/{vaultId} {
      allow read: if request.auth != null;

      // Allow read access to subcollections as well
      match /{allPaths=**} {
        allow read: if request.auth != null;
      }
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
